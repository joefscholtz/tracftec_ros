<?xml version="1.0" ?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="inertial_macros.urdf.xacro"/>

	<xacro:arg name="ignition" default="false"/>

	<xacro:macro name="left_wheel" params="name parent *origin">

    <joint name="${name}_joint" type="continuous">
			<parent link="${parent}"/>
			<child link="${name}"/>
      <xacro:insert_block name="origin"/>
      <axis xyz="0 1 0"/>
		</joint>

    <link name="${name}">
			<visual>
				<geometry>
					<mesh filename="file://$(find tracftec_description)/meshes/left_wheel.stl"/>
				</geometry>
			</visual>
			<collision>
				<geometry>
					<mesh filename="file://$(find tracftec_description)/meshes/left_wheel.stl"/>
				</geometry>
			</collision>
      <xacro:inertial_box mass="3" x="0.17" y="0.00625" z="0.8"/> <!-- TODO replace shoulder axis mass with real value -->
		</link>

	</xacro:macro>
</robot>
